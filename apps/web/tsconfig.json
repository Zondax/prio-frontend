{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/site/*": ["./site/*"],
      "@/app/*": ["./app/*"],
      "@zondax/auth-core": ["../../packages/auth-core/src"],
      "@zondax/auth-core/*": ["../../packages/auth-core/src/*"],
      "@zondax/auth-web": ["../../packages/auth-web/src"],
      "@zondax/auth-web/*": ["../../packages/auth-web/src/*"],
      "@prio-grpc": ["../../packages/grpc/src"],
      "@prio-grpc/*": ["../../packages/grpc/src/*"],
      "@prio-state": ["../../packages/state/src"],
      "@prio-state/*": ["../../packages/state/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
