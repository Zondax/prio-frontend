{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/site/*": ["./site/*"],
      "@/app/*": ["./app/*"],
      "@mono-grpc": ["../../packages/grpc/src"],
      "@mono-grpc/*": ["../../packages/grpc/src/*"],
      "@mono-state": ["../../packages/state/src"],
      "@mono-state/*": ["../../packages/state/src/*"],
      "@mono-ui": ["../../packages/ui/src"],
      "@mono-ui/*": ["../../packages/ui/src/*"],
      "@zondax/auth-core": ["../../libs/auth-core/src"],
      "@zondax/auth-core/*": ["../../libs/auth-core/src/*"],
      "@zondax/auth-web": ["../../libs/auth-web/src"],
      "@zondax/auth-web/*": ["../../libs/auth-web/src/*"],
      "@zondax/ui-web": ["../../libs/ui-web/src"],
      "@zondax/ui-web/*": ["../../libs/ui-web/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../libs/ui-web/src/hooks/use-is-client.ts",
    "../../libs/ui-web/src/components/debug/floating-settings-panel.tsx",
    "../../libs/ui-web/src/components/debug/floating-settings-provider.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
