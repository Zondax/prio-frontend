{
  "name": "mono-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm --filter 'mono-*' --filter '@zondax/*' build",
    "build:expo": "pnpm --filter mono-expo build",
    "build:ext": "pnpm --filter mono-ext build",
    "build:web": "pnpm --filter mono-web build",
    "deps:check": "pnpm list react react-dom --depth=0 --recursive",
    "deps:fix": "pnpm --filter mono-expo run deps:fix",
    "deps:flush": "find . -name 'node_modules' -type d -prune | xargs rm -rf",
    "deps:update": "pnpm --filter 'mono-*' --filter '@zondax/*' run deps:update",
    "dev": "pnpm dev:web",
    "dev:no-release": "pnpm --filter @zondax/no-release dev",
    "dev:expo": "pnpm --filter mono-expo web",
    "dev:expo-local": "pnpm --filter mono-expo dev:local",
    "dev:expo:android": "pnpm --filter mono-expo android",
    "dev:expo:ios": "pnpm --filter mono-expo ios",
    "dev:expo:web": "pnpm --filter mono-expo web",
    "dev:storybook": "pnpm --filter mono-storybook dev",
    "dev:ext": "pnpm --filter mono-ext dev",
    "dev:web": "pnpm --filter mono-web dev",
    "doctor": "pnpm --filter mono-expo run doctor",
    "env:init": "npx -y @zondax/cli@latest env init",
    "env:init:web": "npx -y @zondax/cli@latest env init web",
    "env:init:expo": "npx -y @zondax/cli@latest env init expo",
    "env:init:ext": "npx -y @zondax/cli@latest env init ext",
    "init": "pnpm env:init",
    "start": "pnpm env:init",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "install:expo": "pnpm --filter mono-expo install --pnpm",
    "lint": "biome lint .",
    "lint:analyze": "./libs/scripts/biome-analyze-rules.sh",
    "lint:fix": "biome check --write --unsafe .",
    "fix": "pnpm run lint:fix",
    "test": "pnpm recursive run test",
    "test:expo": "echo disabled",
    "test:expo:coverage": "echo disabled",
    "test:e2e:install": "pnpm --filter mono-web test:e2e:install",
    "test:coverage": "vitest run --coverage --pool=threads --poolOptions.threads.singleThread=true",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "vendor:grpc": "rm -rf packages/grpc && cp -r external/backend/ts/grpc packages/grpc",
    "shadcn": "pnpm --filter mono-web shadcn",
    "ci:check": "pnpm install && pnpm fix && pnpm build:web && pnpm build:ext",
    "build:check": "pnpm install && pnpm fix && pnpm build:web && pnpm build:ext && pnpm build:expo",
    "build:storybook": "pnpm --filter mono-storybook build"
  },
  "resolutions": {
    "@types/react": "19.0.10",
    "react": "^19.0",
    "react-dom": "^19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@testing-library/react": "^16.3.0",
    "@types/async": "^3.2.24",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "globals": "^16.2.0",
    "lefthook": "1.11.14",
    "vite": "7.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@clerk/shared",
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "core-js",
      "esbuild",
      "lefthook",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "client-only": "^0.0.1",
    "server-only": "^0.0.1"
  }
}
