{
  "name": "mono-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm --filter 'mono-*' --filter '@zondax/*' build",
    "build:expo": "pnpm --filter mono-expo build",
    "build:ext": "pnpm --filter mono-ext build",
    "build:web": "pnpm --filter mono-web build",
    "deps:check": "pnpm list react react-dom --depth=0 --recursive",
    "deps:fix": "pnpm --filter mono-expo run deps:fix",
    "deps:flush": "find . -name 'node_modules' -type d -prune | xargs rm -rf",
    "deps:update": "pnpm --filter 'mono-*' --filter '@zondax/*' run deps:update",
    "dev": "pnpm dev:web",
    "dev:expo": "pnpm --filter mono-expo web",
    "dev:expo-local": "pnpm --filter mono-expo dev:local",
    "dev:expo:android": "pnpm --filter mono-expo android",
    "dev:expo:ios": "pnpm --filter mono-expo ios",
    "dev:expo:web": "pnpm --filter mono-expo web",
    "dev:storybook": "pnpm --filter mono-storybook dev",
    "dev:ext": "pnpm --filter mono-ext dev",
    "dev:web": "pnpm --filter mono-web dev",
    "doctor": "pnpm --filter mono-expo run doctor",
    "env:init": "./scripts/init-all-env.sh",
    "env:init:web": "./scripts/init-env.sh web",
    "env:init:expo": "./scripts/init-env.sh expo",
    "env:init:ext": "./scripts/init-env.sh ext",
    "init": "./scripts/init-all-env.sh",
    "start": "./scripts/init-all-env.sh",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "install:expo": "pnpm --filter mono-expo install --pnpm",
    "lint": "biome lint .",
    "lint:analyze": "./libs/scripts/biome-analyze-rules.sh",
    "lint:fix": "biome check --write --unsafe .",
    "fix": "pnpm run lint:fix",
    "test": "pnpm recursive run test",
    "test:expo": "echo disabled",
    "test:expo:coverage": "echo disabled",
    "test:e2e:install": "pnpm --filter mono-web test:e2e:install",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "vendor:grpc": "rm -rf packages/grpc && cp -r external/backend/ts/grpc packages/grpc"
  },
  "resolutions": {
    "@types/react": "19.0.10",
    "react": "^19.0",
    "react-dom": "^19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/async": "^3.2.24",
    "@vitest/coverage-v8": "^3.2.4",
    "globals": "^16.2.0",
    "lefthook": "1.11.14",
    "vite": "7.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@clerk/shared",
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "core-js",
      "esbuild",
      "lefthook",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}